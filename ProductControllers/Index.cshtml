@model IEnumerable<BeWebApp.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý hàng hóa</h2>


<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.ProductId)*@
            Mã hàng hóa
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.NamePro)*@
            Tên hàng hóa
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Price)*@
            Đơn giá
        </th>
        <th>
            @*Hình ảnh*@
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Category1.NameCate)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NamePro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.ImagePro)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category1.NameCate)
        </td>
        <td>
            @Html.ActionLink("Xem chi tiết", "Edit", new { id = item.ProductID }, new { @class = "btn btn-default btn-sm" }) |
            @Html.ActionLink("Sửa", "Details", new { id = item.ProductID }, new { @class = "btn btn-default btn-sm" }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-default btn-sm" })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-default" })
</p>
